---
import type { ZodStringDef } from "astro/zod";
import plateImage from "../images/plateImage.jpeg";
import { Image } from 'astro:assets';

interface Props {
    title: string,
    description: string,
    img: string,
}

const {title, description, img} = Astro.props;
---

<div class="flex flex-row border-black border-2">
    <Image src={plateImage} alt="Image of a plate" class="object-cover h-64"/>
    <div class="p-6 text-center">
        <h2 class="text-2xl">{title}</h2>
        <p>{description}</p>
        <br>
        <button class="bg-black py-1 text-white px-5">View</button>
    </div>
</img>

<style>
    h2 {
        font-family: Academy Engraved LET;
    }
</style>