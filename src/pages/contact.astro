---
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.tsx";
---

<Layout title="Contact">
  <main
    class="my-8 mx-12 md:mx-48 md:my-16 flex flex-col items-center grow-1 justify-around gap-4 min-h-screen"
  >
    <div class="md:w-3/5">
      <h1 class="text-5xl text-center">Contact Us</h1>
      <p class="text-center">
        In need of assistance or want to inquire about an item? Fill out the
        form or use the information below to get into contact with us.
      </p>
    </div>
    <Form client:only="react" />
    <p
    >
    <!-- class="before:w-3 before:bg-black before:h-1 before:left-0 relative before:absolute before: bottom-1/2 inline-block after:w-3 after:bg-black after:h-1 after:right-0 after:absolute" -->
      --  Or --
    </p>
    <div>
      <ul class="list-none flex flex-col md:flex-row gap-10 items-center">
        <li class="flex flex-row gap-2">
          <svg
            class="w-6 h-6 text-gray-800"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 18 18"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m16.344 12.168-1.4-1.4a1.98 1.98 0 0 0-2.8 0l-.7.7a1.98 1.98 0 0 1-2.8 0l-2.1-2.1a1.98 1.98 0 0 1 0-2.8l.7-.7a1.981 1.981 0 0 0 0-2.8l-1.4-1.4a1.828 1.828 0 0 0-2.8 0C-.638 5.323 1.1 9.542 4.78 13.22c3.68 3.678 7.9 5.418 11.564 1.752a1.828 1.828 0 0 0 0-2.804Z"
            ></path>
          </svg> (603) 498-5009
        </li>
        <li class="flex flex-row gap-2">
          <svg
            class="w-6 h-6 text-gray-800"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 20 20"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 4a4 4 0 0 1 4 4v6M5 4a4 4 0 0 0-4 4v6h8M5 4h9M9 14h10V8a3.999 3.999 0 0 0-2.066-3.5M9 14v5m0-5h4v5m-9-8h2m8-4V1h2"
            ></path>
          </svg>
           Example@example.com
        </li>
        <li class="flex flex-row gap-2">
          <svg
            class="w-6 h-6 text-gray-800"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 21"
          >
            <g
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
            >
              <path d="M8 12a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"></path>
              <path
                d="M13.8 12.938h-.01a7 7 0 1 0-11.465.144h-.016l.141.17c.1.128.2.252.3.372L8 20l5.13-6.248c.193-.209.373-.429.54-.66l.13-.154Z"
              ></path>
            </g>
          </svg>
           100 North St., Edwardsville, IL, 62025
        </li>
      </ul>
    </div>
  </main>
  <script
    type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
  ></script>
  <script type="text/javascript">
    (function () {
      emailjs.init("2GuZPLvQ3ROla7NzI");
    })();
  </script>
</Layout>

